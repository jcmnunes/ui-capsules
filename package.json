{
  "name": "@binarycapsule/ui-capsules",
  "version": "0.0.0-development",
  "main": "commonjs/index.js",
  "module": "esm/index.js",
  "files": [
    "commonjs",
    "esm",
    "assets",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "react-scripts start",
    "build:app": "react-scripts build && echo '/* /index.html  200' | cat >build/_redirects",
    "test": "react-scripts test",
    "test:nowatch": "CI=true npm run test",
    "eject": "react-scripts eject",
    "lint": "eslint ./src/**/*.{js,jsx}",
    "format": "pretty-quick --staged",
    "clean": "rm -rf commonjs && rm -rf esm && rm -rf assets",
    "build-commonjs": "BABEL_ENV=commonjs babel src/lib --out-dir commonjs --source-maps inline",
    "build-esm": "BABEL_ENV=esm babel src/lib --out-dir esm --source-maps inline",
    "build": "npm run clean && npm run build-commonjs && npm run build-esm && cp -rf src/lib/styles assets",
    "semantic-release": "semantic-release",
    "commit": "git-cz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint && npm run test:nowatch"
    }
  },
  "dependencies": {
    "downshift": "^3.4.1",
    "focus-visible": "^5.0.2",
    "jest-styled-components": "^6.3.4",
    "prop-types": "^15.7.2",
    "react-copy-to-clipboard": "^5.0.2",
    "react-modal": "^3.11.1",
    "react-popper-tooltip": "^2.10.0",
    "react-select": "^3.0.8",
    "react-toast-notifications": "^2.2.5",
    "styled-components": "^4.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@testing-library/jest-dom": "^4.2.3",
    "@testing-library/react": "^9.3.2",
    "@types/styled-components": "^4.4.0",
    "babel-plugin-styled-components": "^1.10.6",
    "babel-preset-react-app": "^9.0.2",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.3",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "husky": "^3.0.9",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-element-to-jsx-string": "^14.1.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.2.0",
    "semantic-release": "^15.13.30"
  },
  "peerDependencies": {
    "react": "^16.11.0",
    "react-dom": "^16.11.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "babelMacros": {
    "styledComponents": {
      "pure": true
    }
  },
  "description": "UI kit",
  "repository": {
    "type": "git",
    "url": "https://github.com/jcmnunes/ui-capsules.git"
  },
  "keywords": [
    "ui",
    "kit",
    "components",
    "react"
  ],
  "author": "Jose C. Nunes <jn@josenunes.xyz> (https://josenunes.xyz/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jcmnunes/ui-capsules/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
